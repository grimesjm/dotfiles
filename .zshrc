# Use multiple kubeconfig files
update_kubeconfig () {
  KUBECONFIG=$HOME/.kube/config
  for f in $HOME/.kube/config.d/*; do
      KUBECONFIG=$KUBECONFIG:$f
  done
  export KUBECONFIG
}

update_kubeconfig
